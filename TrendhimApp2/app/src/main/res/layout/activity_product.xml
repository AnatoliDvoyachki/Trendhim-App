<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Product banner !-->
    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:layout_above="@+id/leftImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop" />

    <!-- Left product picture !-->
    <ImageView
        android:id="@+id/leftImageView"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rightImageView"
        android:layout_marginStart="27dp"
        android:cropToPadding="true"
        android:padding="1dp"
        android:scaleType="centerCrop" />

    <!-- Right product picture !-->
    <ImageView
        android:id="@+id/rightImageView"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_above="@+id/addToCartButton"
        android:layout_marginBottom="125dp"
        android:layout_toEndOf="@+id/addToWishlistButton"
        android:cropToPadding="true"
        android:padding="1dp"
        android:scaleType="centerCrop" />

    <!-- Add to cart button !-->
    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:background="@color/buttonGreen"
        android:text="@string/addToCartButtonLabel"
        android:textColor="@color/white" />

    <!-- Add to wishlist !-->
    <Button
        android:id="@+id/addToWishlistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/brandTextView"
        android:layout_alignTop="@+id/addToCartButton"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:background="@color/buttonGreen"
        android:text="@string/addToWishlistButtonLabel"
        android:textColor="@color/white" />

    <!-- Brand name !-->
    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/leftImageView"
        android:layout_below="@+id/leftImageView"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textSize="10sp" />

    <!-- Product name !-->
    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/brandTextView"
        android:layout_below="@+id/priceTextView"
        android:gravity="center" />

    <!-- Price text view !-->
    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/brandTextView"
        android:layout_alignBottom="@+id/brandTextView"
        android:layout_alignEnd="@+id/rightImageView"
        android:gravity="center" />

</RelativeLayout>