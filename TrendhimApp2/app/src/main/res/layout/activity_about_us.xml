<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/trendhim_story_and_core_values"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/the_trendhim_philosophy_of_awesomeness"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_row="2"
            android:background="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:padding="15dp"
            android:text="@string/introduction_about_us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_row="4"
            android:background="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="5"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/second_about_us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="6">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="4">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_margin="15dp"
                    android:layout_row="0"
                    android:contentDescription="@string/about_us_one"
                    android:src="@drawable/about_us_one" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="20dp"
                    android:layout_row="0"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/header1"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="670dp"
                    android:layout_column="0"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="42.75dp"
                    android:layout_row="1"
                    android:layout_rowSpan="2"
                    android:background="@android:color/holo_green_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="-17dp"
                    android:layout_row="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="2007"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="-20dp"
                    android:layout_row="1"
                    android:background="@android:color/holo_green_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_row="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/body_one"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_rowSpan="2"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="290dp"
                    android:layout_height="220dp"
                    android:layout_column="0"
                    android:layout_gravity="right"
                    android:layout_marginTop="-160dp"
                    android:layout_row="2"
                    android:cropToPadding="false"
                    android:src="@drawable/young_mikkel_sebastian"
                    android:paddingRight="10dp"/>


            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="7">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="3">

                <ImageView
                    android:src="@drawable/about_us_one"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/about_us_one"
                    android:layout_column="0"
                    android:layout_row="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="20dp"
                    android:layout_row="0"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Thanks, mom "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="600dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="42.75dp"
                    android:background="@android:color/holo_green_dark"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_rowSpan="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="-17dp"
                    android:layout_row="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="2008"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="-40dp"
                    android:layout_row="1"
                    android:background="@android:color/holo_green_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_row="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/body_two"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </GridLayout>

        </LinearLayout>

    </GridLayout>

</ScrollView>