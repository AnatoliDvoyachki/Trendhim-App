<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_wishlist_border"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banner_image_view_shopping_cart"
            android:layout_width="80dp"
            android:layout_height="87dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/product" />

        <TextView
            android:id="@+id/product_name_text_view"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/_0" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/initial_value" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/increment_button"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="@color/black"
                android:text="@string/plus_sign"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/decrement_button"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="@color/black"
                android:text="@string/minus_sign"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/total_products_price_text_view"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/_0" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

    <ImageButton
        android:id="@+id/remove_item_button"
        android:layout_width="@dimen/item_wishlist_button_width"
        android:layout_height="@dimen/item_wishlist_button_height"
        android:background="@drawable/remove_button"
        android:padding="2dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/remove_icon"
        android:contentDescription="@string/remove_success_message" />

    </LinearLayout>


</LinearLayout>